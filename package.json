{
  "name": "portfolio-nextjs-15",
  "version": "3.0.0",
  "description": "Portfolio moderne avec Next.js 15+, sécurité avancée, performance optimisée et infrastructure complète",
  "scripts": {
    "dev": "next dev --webpack",
    "build": "npx cross-env NODE_OPTIONS=--max-old-space-size=4096 node node_modules/next/dist/bin/next build --webpack",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "security:audit": "npm audit && npm audit fix",
    "analyze": "ANALYZE=true npm run build",
    "db:generate": "prisma generate && npx tsx prisma/restore-data.ts || true",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "webhook:set": "node scripts/set-telegram-webhook.js",
    "deploy": "bash scripts/deploy.sh",
    "postinstall": "prisma generate && npx tsx prisma/restore-data.ts || true",
    "build:admin": "npm run build --prefix src/app/administration && node scripts/copy-admin.js"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.4.0",
    "@prisma/client": "^5.20.0",
    "@sentry/nextjs": "^8.30.0",
    "@types/qrcode": "^1.5.6",
    "@types/qrcode.react": "^1.0.5",
    "argon2": "^0.40.3",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "dompurify": "^3.1.6",
    "framer-motion": "^11.5.4",
    "lucide-react": "^0.441.0",
    "next": "^16.1.6",
    "next-auth": "^4.24.7",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "^1.97.3",
    "sharp": "^0.33.5",
    "simplebar-react": "^3.3.2",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.0.2",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^10.1.0",
    "cypress": "^13.14.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.2",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "prisma": "^5.20.0",
    "tsx": "^4.19.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
